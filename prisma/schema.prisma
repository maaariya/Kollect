generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  cards    UserCard[]
  wishlist WishlistCard[]
}

model Card {
  id        Int        @id @default(autoincrement())
  name      String
  member    String
  group     String
  album     String
  image     String?
  createdAt DateTime   @default(now())
  users     UserCard[]
  wishlistedBy WishlistCard[]
}

model UserCard {
  id     Int  @id @default(autoincrement())
  userId Int
  cardId Int
  card   Card @relation(fields: [cardId], references: [id])
  user   User @relation(fields: [userId], references: [id])

  @@unique([userId, cardId])
}

model WishlistCard {
  id      Int   @id @default(autoincrement())
  userId  Int
  cardId  Int

  user User @relation(fields: [userId], references: [id])
  card Card @relation(fields: [cardId], references: [id])

  @@unique([userId, cardId])
}
