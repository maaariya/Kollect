generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  cards     Card[]
  createdAt DateTime @default(now())
}

model Card {
  id        Int      @id @default(autoincrement())
  name      String
  member    String
  group     String
  album     String
  image     String?
  ownerId   Int
  owner     User     @relation(fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
}